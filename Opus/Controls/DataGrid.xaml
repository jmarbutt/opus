<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="Opus.Controls.DataGrid"
	mc:Ignorable="d"
	>
	
	<toolkit:DockPanel x:Name="LayoutRoot" Background="White">
		<StackPanel Height="29" Orientation="Horizontal" VerticalAlignment="Top"  toolkit:DockPanel.Dock="Top">
			<Button Content="Add" Name="btnAdd" />
			<Button Content="Edit" Name="btnEdit" />
			<Button Content="Delete" Name="btnDelete" />
		</StackPanel>
		<sdk:DataGrid x:Name="dataGrid" />
	</toolkit:DockPanel>
</UserControl>
